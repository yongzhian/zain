<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flwrobot.dao.UserDao">
	<select id="countAll" resultType="int">  <!-- 查询表中记录总数 -->
		select count(*) c from user;
	</select>

	<select id="selectAll" resultType="com.flwrobot.entity.User">    <!-- 查询表中的所有用户 -->
		select * from user order by username asc
	</select>

	<insert id="insert" parameterType="com.flwrobot.entity.User">    <!-- 向数据库中插入用户 -->
		insert into user(username, password, email, main_phone, create_time)
		values(#{username},#{password},#{email}, #{mainPhone}, now())
	</insert>

	<update id="update" parameterType="com.flwrobot.entity.User">     <!-- 更新库中的用户 -->
		update user set
		username=#{username},password=#{password},email=#{email}
		where username=#{username}
	</update>

	<delete id="delete" parameterType="String">    <!-- 删除用户 -->
		delete from user where username=#{username}
	</delete>

	<select id="findByUserName" parameterType="String"
		resultType="com.flwrobot.entity.User"> <!-- 根据用户名查找用户 -->
		select * from user where username=#{username}
	</select>
</mapper>